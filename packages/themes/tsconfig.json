{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "target": "ES2020",
    "baseUrl": ".",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "declaration": true,
    "declarationMap": false,
    "noEmit": false,
    "outDir": "./dist",
    "sourceMap": false,
    "preserveSymlinks": true,
    "skipLibCheck": true
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/tailwind.config.ts",
    "**/tailwind*.config.ts",
    "**/tailwind.*.*.ts",
    "./build.ts"
  ]
}
